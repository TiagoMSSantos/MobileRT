{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "enabled": true,
  "extends": [
    "config:base"
  ],
  "timezone": "UTC",
  "branchPrefix": "up-renovate-",
  "separateMajorMinor": true,
  "separateMultipleMajor": true,
  "ignoreTests": false,
  "prHourlyLimit": 0,
  "major": {
    "enabled": true,
    "automerge": false
  },
  "minor": {
    "enabled": true,
    "automerge": true
  },
  "patch": {
    "enabled": true,
    "automerge": true
  },
  "prConcurrentLimit": 0,
  "rebaseWhen": "auto"
}
