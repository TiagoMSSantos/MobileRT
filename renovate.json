{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "enabled": true,
  "extends": [
    "config:base",
    "github>whitesource/merge-confidence:beta",
    ":dependencyDashboard",
    ":separateMultipleMajorReleases",
    ":separatePatchReleases",
    ":rebaseStalePrs",
    ":automergePr",
    ":automergeRequireAllStatusChecks",
    ":automergeDigest",
    ":automergeLinters",
    ":automergeTesters",
    ":automergeTypes",
    ":automergeMinor",
    ":automergePatch",
    ":semanticCommits"
  ],
  "timezone": "UTC",
  "branchPrefix": "up-renovate-",
  "separateMajorMinor": true,
  "separateMultipleMajor": true,
  "ignoreTests": false,
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0,
  "major": {
    "enabled": true,
    "automerge": false
  },
  "minor": {
    "enabled": true,
    "automerge": true
  },
  "patch": {
    "enabled": true,
    "automerge": true
  },
  "commitMessagePrefix": "renovate: ",
  "commitMessageSuffix": "",
  "rebaseWhen": "auto",
  "reviewersFromCodeOwners": true,
  "ignoreDeps": [],
  "git-submodules": {
    "enabled": false
  },
  "conan": {
    "enabled": true
  },
  "pre-commit": {
    "enabled": true
  }
}
