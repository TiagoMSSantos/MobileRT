<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:installLocation="auto">

    <!-- Necessary for Android API 15 -->
    <uses-permission android:name="android.permission.GET_TASKS" android:maxSdkVersion="16" />
    <!-- Necessary for Android API 33 -->
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES"/>
    <uses-feature android:glEsVersion="0x00020000" />

    <application
        android:allowBackup="false"
        android:fullBackupContent="false"
        android:hardwareAccelerated="false"
        android:label="MobileRT_test"
        android:requestLegacyExternalStorage="true"
        tools:targetApi="s">
        <activity
            android:name="puscas.mobilertapp.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="puscas.mobilertapp.test"
            android:exported="false"
            android:grantUriPermissions="true">
        </provider>
    </application>

</manifest>
