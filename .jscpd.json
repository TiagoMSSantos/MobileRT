{
  "threshold": 100,
  "output": "./docs/jscpd-report/",
  "reporters": ["html", "console", "badge"],
  "mode": "mild",
  "ignore": [
    "**/.gradle/**",
    "**/.idea/**",
    "**/.kotlin/**",
    "**/.vscode/**",
    "**/build*/**",
    "**/coverage/**",
    "**/.cxx/**",
    "**/third_party/**",
    "**/WavefrontOBJs/**"
  ],
  "pattern": "**/**",
  "absolute": false,
  "gitignore": true,
  "min-lines": 0,
  "max-lines": 1000000000,
  "max-size": 1000000000,
  "min-tokens": 0,
  "blame": false,
  "format": ["cpp", "cpp-header", "c", "java", "kotlin", "bash", "git", "glsl", "docker", "markdown", "properties", "yaml"],
  "formats-exts": [
    "cpp:cpp,hpp,h",
    "cpp-header:hpp,h",
    "c:c,h",
    "java:java",
    "kotlin:kt",
    "bash:sh",
    "glsl:glsl",
    "docker:Dockerfile"
  ]
}
